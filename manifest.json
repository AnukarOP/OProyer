{
  "manifest_version": 2,
  "name": "Request Modifier",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Request Modifier"
  },
  "icons": {
    "48": "icon.png"
  },
  "description": "A Chrome extension to modify HTTP requests by removing a custom part."
}
